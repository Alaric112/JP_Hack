CheckGameOver:
	CHECK_CLASS 0xFFFF
	SVAL 2 Transporter
	BNE 1 0xC 0x2 // branch label 1 if not transpoter
		CALL GameOverEvent
		GOTO 2
		LABEL 1
	ENUF 0xC
	LABEL 2
	NoFade
	ENDA	

GameOverEvent:
	CAM1 Sanders
	FlashCursor(Sanders,60)
	Text(Ch7WagonEscape)
	ASMC 0x00D391 //game over
	NoFade
	ENDA

CheckForWin:
	Increment(1)
	COUNTER_CHECK 1
	SVAL 0x2 6
	BNE 1 0xC 0x2 // branch label 1 if counter not at 6
		CALL EndingScene
		GOTO 2
	LABEL 1
	ENUF 0xB
	ENUF 0xA
	LABEL 2
	NoFade
	ENDA

